<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Chess.UI.UI.ComboboxTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chess.UI.UI"
    xmlns:ui="using:Chess.UI.UI">

    <ui:NetworkAdapterToIconConverter x:Key="NetworkAdapterToIconConverter" />

    <!--  Templates for Sectioned Combobox  -->

    <DataTemplate x:Key="HeaderTemplate" x:DataType="ui:ComboHeader">
        <TextBlock
            Name="HeadingText"
            FontSize="14"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Text="{Binding HeadingText, Mode=OneWay}" />
    </DataTemplate>

    <DataTemplate x:Key="DividerTemplate" x:DataType="ui:ComboDivider">
        <Border
            Height="1"
            Margin="0,1"
            VerticalAlignment="Center"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
    </DataTemplate>

    <!--  Templates for ComboItems  -->

    <DataTemplate x:Key="NetworkAdapterTemplate" x:DataType="ui:NetworkAdapterComboItem">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <FontIcon
                Width="24"
                Height="24"
                VerticalAlignment="Center"
                FontSize="24"
                Glyph="{Binding NetworkAdapter, Converter={StaticResource NetworkAdapterToIconConverter}, Mode=OneWay}" />
            <StackPanel>
                <TextBlock
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{Binding NetworkAdapter.NetworkName, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{Binding NetworkAdapter.AdapterName, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="SelectedNetworkAdapterTemplate" x:DataType="ui:NetworkAdapterComboItem">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <FontIcon
                Width="16"
                Height="16"
                VerticalAlignment="Center"
                FontSize="16"
                Glyph="{Binding NetworkAdapter, Converter={StaticResource NetworkAdapterToIconConverter}, Mode=OneWay}" />
            <StackPanel>
                <TextBlock
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{Binding NetworkAdapter.NetworkName, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
