<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Chess.UI.Views.AudioPreferencesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Chess.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <StackPanel
            Width="Auto"
            Height="Auto"
            Margin="16"
            Orientation="Vertical"
            Spacing="16">

            <!--  Category: Audio  -->
            <TextBlock Style="{StaticResource SettingsTitle}" Text="Audio" />

            <!--  Master  -->
            <StackPanel Spacing="4">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource SettingsSubTitle}" Text="Master" />

                    <Slider
                        Name="Master_Volume"
                        Grid.Column="1"
                        Width="200"
                        PointerCaptureLost="Master_Volume_PointerCaptureLost"
                        SnapsTo="StepValues"
                        StepFrequency="10"
                        Maximum="100"
                        Value="{x:Bind _viewModel.MasterVolume, Mode=OneWay}"
                        Minimum="0" />

                </Grid>

                <TextBlock Style="{ThemeResource SettingsDescription}" Text="Adjust the overall audio level" />
            </StackPanel>


            <Border Height="12" />


            <!--  SXF  -->
            <TextBlock Style="{StaticResource SettingsSubTitle}" Text="SFX" />

            <StackPanel Spacing="4">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        Name="SFX_Enabled"
                        Grid.Column="0"
                        Content="Enabled"
                        IsChecked="{x:Bind _viewModel.SfxEnabled, Mode=TwoWay}" />

                    <Slider
                        Name="SFX_Volume"
                        Grid.Column="1"
                        Width="200"
                        PointerCaptureLost="SFX_Volume_PointerCaptureLost"
                        SnapsTo="StepValues"
                        StepFrequency="10"
                        Maximum="100"
                        Value="{x:Bind _viewModel.SfxVolume, Mode=OneWay}"
                        Minimum="0" />

                </Grid>

                <TextBlock Style="{ThemeResource SettingsDescription}" Text="Adjust the soundeffect" />
            </StackPanel>


            <Border Height="12" />


            <!--  Atmosphere  -->
            <TextBlock Style="{StaticResource SettingsSubTitle}" Text="Atmosphere" />

            <StackPanel Spacing="4">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        Name="Atmos_Enabled"
                        Grid.Column="0"
                        Content="Enabled"
                        IsChecked="{x:Bind _viewModel.AtmosEnabled, Mode=TwoWay}" />

                    <StackPanel Grid.Column="1">
                        <ComboBox
                            HorizontalAlignment="Stretch"
                            ItemsSource="{x:Bind _viewModel.AtmosphereSoundscapes}"
                            SelectedItem="{x:Bind _viewModel.SelectedAtmosphereSoundscape, Mode=TwoWay}"
                            Style="{StaticResource SettingComboBoxStyle}" />
                        <Slider
                            Name="Atmos_Volume"
                            Grid.Column="1"
                            Width="200"
                            PointerCaptureLost="Atmos_Volume_PointerCaptureLost"
                            SnapsTo="StepValues"
                            StepFrequency="10"
                            Maximum="100"
                            Value="{x:Bind _viewModel.AtmosVolume, Mode=OneWay}"
                            Minimum="0" />
                    </StackPanel>

                </Grid>

                <TextBlock Style="{ThemeResource SettingsDescription}" Text="Adjust the atmospheric soundscape" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
