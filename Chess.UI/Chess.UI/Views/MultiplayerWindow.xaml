<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Chess.UI.Views.MultiplayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chess.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Multiplayer">

    <Grid Name="Rootgrid">

        <StackPanel Name="InitView" Visibility="{x:Bind _viewModel.InitView, Mode=OneWay}" Orientation="Vertical" Spacing="8">

            <!--Title-->
            <TextBlock Text="Multiplayer" Style="{ThemeResource MPTitle}"/>

            <!--Settings-->
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">

                <!--Network adapter-->
                <StackPanel Orientation="Vertical" Margin="8">

                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Network" Style="{ThemeResource MPSubTitle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" IsEnabled="{x:Bind _viewModel.SettingsEditable, Mode=TwoWay}" ItemsSource="{x:Bind _viewModel.NetworkAdapters, Mode=TwoWay}" DisplayMemberPath="Name" SelectedItem="{x:Bind _viewModel.SelectedAdapter, Mode=TwoWay}" SelectionChanged="NetworkAdapterChanged" Style="{StaticResource ComboBoxStyle}"/>

                    </Grid>

                    <TextBlock Text="Select your network adapter" Style="{ThemeResource MPDesc}" VerticalAlignment="Center"/>

                </StackPanel>

                <!--Local Player Name-->
                <StackPanel Orientation="Vertical" Margin="8">

                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Name" HorizontalAlignment="Left" Style="{ThemeResource MPSubTitle}" VerticalAlignment="Center"/>
                        <TextBox Name="LocalPlayerName" Grid.Column="1" Style="{ThemeResource PlainTextEnter}" HorizontalAlignment="Stretch" TextChanging="PlayerName_TextChanging" TextChanged="LocalPlayerName_TextChanged" IsEnabled="{x:Bind _viewModel.SettingsEditable, Mode=TwoWay}" PlaceholderText="Set your name"/>

                    </Grid>

                    <TextBlock Text="Chose your player name" Style="{ThemeResource MPDesc}"/>
                </StackPanel>

            </StackPanel>

            <ProgressRing IsActive="{x:Bind _viewModel.Processing, Mode=TwoWay}" Margin="16"/>

            <StackPanel Orientation="Horizontal" Spacing="8" Height="40" HorizontalAlignment="Center">
                <Button Name="HostGameButton" IsEnabled="{x:Bind _viewModel.HostGameButtonEnabled, Mode=TwoWay}" Content="Host a game" Style="{ThemeResource MPStartButtonStyle}" Click="HostGameButton_Click"/>
                <Button Name="JoinGameButton" IsEnabled="{x:Bind _viewModel.ClientGameButtonEnabled, Mode=TwoWay}" Content="Join a game"  Style="{ThemeResource MPStartButtonStyle}" Click="JoinGameButton_Click"/>

                <Button Name="ReturnButton" HorizontalAlignment="Center" Click="ReturnButton_Click" Style="{ThemeResource FontIconButtonStyle}" >
                    <FontIcon Glyph="&#xEB97;"/>
                </Button>

            </StackPanel>

        </StackPanel>


        <StackPanel Name="ClientRequestedConnectionView" Visibility="{x:Bind _viewModel.ClientRequestedConnectionView, Mode=OneWay}" Orientation="Vertical" Spacing="32" VerticalAlignment="Center">

            <TextBlock Text="{x:Bind _viewModel.RemotePlayerName, Mode=OneWay}" Style="{ThemeResource MPTitle}" HorizontalAlignment="Center" />
            <TextBlock Text="wants to join." Style="{ThemeResource MPSubTitle}" HorizontalAlignment="Center"/>
            <TextBlock Text="Accept this request?" Style="{ThemeResource MPSubTitle}" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="HostAcceptButton" Style="{ThemeResource FontIconButtonStyle}" Click="HostAcceptButton_Click">
                    <FontIcon Glyph="&#xE8FB;"/>
                </Button>
                <Button Name="HostDeclineButton" Style="{ThemeResource FontIconButtonStyle}" Click="HostDeclineButton_Click">
                    <FontIcon Glyph="&#xE711;"/>
                </Button>
            </StackPanel>
        </StackPanel>


        <StackPanel Name="ClientFoundHostView" Visibility="{x:Bind _viewModel.ClientFoundHostView, Mode=TwoWay}" Orientation="Vertical" Spacing="32" VerticalAlignment="Center">

            <TextBlock Text="Found" HorizontalAlignment="Center" Style="{ThemeResource MPSubTitle}"/>
            <TextBlock Text="{x:Bind _viewModel.RemotePlayerName, Mode=OneWay}" HorizontalAlignment="Center" Style="{ThemeResource MPTitle}"/>
            <TextBlock Text="on the network" HorizontalAlignment="Center" Style="{ThemeResource MPSubTitle}"/>

            <TextBlock Text="Do you want to join?" HorizontalAlignment="Center" Style="{ThemeResource MPSubTitle}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="JoinAcceptButton" Style="{ThemeResource FontIconButtonStyle}" Click="JoinAcceptButton_Click">
                    <FontIcon Glyph="&#xE8FB;"/>
                </Button>

                <Button Name="JoinDiscardButton" Style="{ThemeResource FontIconButtonStyle}" Click="JoinDiscardButton_Click">
                    <FontIcon Glyph="&#xE711;"/>
                </Button>
            </StackPanel>

        </StackPanel>


        <StackPanel Name="ClientWaitingForResponeView" Visibility="{x:Bind _viewModel.ClientWaitingForResponseView, Mode=TwoWay}" Orientation="Vertical" HorizontalAlignment="Center">

            <TextBlock Text="Waiting for a response from" Margin="20,50,20,10" FontSize="22"/>
            <TextBlock Text="{x:Bind _viewModel.RemotePlayerName}" Margin="20,10,20,10" Style="{ThemeResource MPSubTitle}"/>
            <ProgressRing Height="50" Width="50" Margin="20,20,20,0"/>

            <Button Name="AbortWaitButton" Style="{ThemeResource FontIconButtonStyle}" Click="AbortWaitButton_Click" Margin="20,70,20,10" HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE711;"/>
            </Button>
        </StackPanel>


        <StackPanel Name="SettingPlayerColorView" Visibility="{x:Bind _viewModel.SettingLocalPlayerView, Mode=TwoWay}" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Select your player color" Margin="20,24" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                
                <!-- White King Button -->
                <StackPanel>
                    <Button Name="SelectWhiteButton" Width="100" Height="100" Click="SelectWhiteButton_Click" BorderBrush="Green" BorderThickness="1">
                        <Image Source="ms-appx:///Assets/Pieces/Basic/KingW.png" Stretch="Uniform"/>
                    </Button>
                    <TextBlock Text="White" Margin="12,8" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Black King Button -->
                <StackPanel>

                    <Button Name="SelectBlackButton" Width="100" Height="100" Click="SelectBlackButton_Click" BorderBrush="Green" BorderThickness="1">
                        <Image Source="ms-appx:///Assets/Pieces/Basic/KingB.png" Stretch="Uniform"/>
                    </Button>
                    <TextBlock Text="Black" Margin="12,8" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>
            
            </StackPanel>

            <!-- Ready Button -->
            <Button Name="ReadyButton" Content="I'm Ready!" IsEnabled="{x:Bind _viewModel.ReadyButtonEnabled, Mode=TwoWay}" Click="ReadyButton_Click" Style="{ThemeResource MPStartButtonStyle}" HorizontalAlignment="Center" Margin="0,12"/>

            <!-- Waiting for other player -->
            <StackPanel Visibility="{x:Bind _viewModel.WaitingForRemoteVisibility, Mode=OneWay}" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Waiting for other player..." FontSize="16" HorizontalAlignment="Center"/>
                <ProgressRing IsActive="True" Width="30" Height="30" Margin="0,10,0,0"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
