<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Chess.UI.Views.MultiplayerPreferencesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Chess.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Chess.UI.UI"
    mc:Ignorable="d">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///UI/ComboBoxTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ui:SectionedTemplateSelector
                x:Key="NetworkAdapterSelector"
                DividerTemplate="{StaticResource DividerTemplate}"
                HeaderTemplate="{StaticResource HeaderTemplate}"
                ItemTemplate="{StaticResource NetworkAdapterTemplate}">
                <ui:SectionedTemplateSelector.ItemTemplateSelector>
                    <ui:ComboboxItemTemplateSelector ItemTemplate="{StaticResource NetworkAdapterTemplate}" SelectedItemContentTemplate="{StaticResource SelectedNetworkAdapterTemplate}" />
                </ui:SectionedTemplateSelector.ItemTemplateSelector>
            </ui:SectionedTemplateSelector>

        </ResourceDictionary>
    </Page.Resources>

    <StackPanel
        Width="Auto"
        Height="Auto"
        Margin="16"
        Orientation="Vertical"
        Spacing="28">

        <!--  Category: Multiplayer  -->
        <TextBlock Style="{StaticResource SettingsTitle}" Text="Multiplayer" />

        <StackPanel Spacing="8">
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Network Adapter  -->
                <TextBlock Style="{StaticResource SettingsSubTitle}" Text="Network" />

                <ComboBox
                    Grid.Column="1"
                    Width="200"
                    HorizontalAlignment="Stretch"
                    ItemContainerStyleSelector="{StaticResource ComboBoxItemContainerStyleSelector}"
                    ItemTemplateSelector="{StaticResource NetworkAdapterSelector}"
                    ItemsSource="{x:Bind _viewModel.NetworkAdapterNodes}"
                    SelectedItem="{x:Bind _viewModel.SelectedNetworkAdaperNode, Mode=TwoWay}"
                    SelectionChanged="NetworkAdapterChanged" />

            </Grid>

            <TextBlock Style="{ThemeResource SettingsDescription}" Text="Choose your local network adapter" />
        </StackPanel>

        <StackPanel Spacing="8">
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Local Player name  -->
                <TextBlock Style="{StaticResource SettingsSubTitle}" Text="Player" />

                <TextBox
                    Name="LocalPlayerName"
                    Grid.Column="1"
                    Width="200"
                    HorizontalAlignment="Stretch"
                    Style="{ThemeResource PlainTextEnter}"
                    Text="{x:Bind _viewModel.LocalPlayerName, Mode=TwoWay}" />

            </Grid>

            <TextBlock Style="{ThemeResource SettingsDescription}" Text="Choose your local player name" />
        </StackPanel>


    </StackPanel>

</Page>
