<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Chess.UI.Views.GameConfigurationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:Chess.UI.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Chess.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Game Configuration"
    mc:Ignorable="d">

    <Grid Name="Rootgrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <NavigationView
            x:Name="GameModeNavigationView"
            Grid.Row="0"
            Width="600"
            Height="400"
            AlwaysShowHeader="True"
            Background="Transparent"
            CornerRadius="8"
            Header="Select Game Mode"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            OpenPaneLength="180"
            PaneDisplayMode="Left"
            SelectionChanged="OnNavigationSelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Local Co-op" Tag="LocalCoop">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE716;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Single Player" Tag="SinglePlayer">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Multiplayer" Tag="Multiplayer">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8F4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" CornerRadius="8" />
        </NavigationView>

        <Button
            Grid.Row="1"
            Margin="12"
            HorizontalAlignment="Right"
            Click="ReturnButton_Click"
            Style="{ThemeResource PreferencesButtonStyle}">
            <FontIcon Glyph="&#xEB97;" />
        </Button>
    </Grid>

</Window>
